{{define "content"}}
	{{with .PageData}}
		<div class="container-fluid banner-2 text-overlay">
			<div class="container container-padded">
				<div class="row justify-content-center">
					<div class="text-center">
						<h1 class="display-4">Our Teams</h1>
						<h2 class="display-5">The people who make URY happen!</h2>
						<br>
						<a href="/getinvolved/#signUp" class="btn btn-primary-inverse btn-md">Be part of one!</a>
					</div>
				</div>
			</div>
		</div>
		{{with .Team}}
		<div class="container-fluid">
			<div class="container container-padded">
				<h1 class="page-title">{{.Name}}</h1>
				<p>{{html .Description}}</p>
			</div>
		</div>
		{{end}}
		<div class="container-fluid bg-third">
			<div class="container container-padded">
				<h2>Team Officers</h2>
				<div class="row">
				{{range .Heads}}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<h3>{{.Position.Name}}<a href="mailto:head-of-computing@ury.org.uk"><span class="glyphicon glyphicon-envelope"></span></a></h3>
								<figure>
									<a href="/people/{{.User.MemberID}}" title="Goto {{.User.Fname}} {{.User.Sname}}'s profile">
										<div class="user-img">
											<img class="img-fluid" src="https://ury.org.uk{{.User.Photo}}" alt="Photo of {{.User.Fname}} {{.User.Sname}}">
										</div>
										<figcaption>{{.User.Fname}} {{.User.Sname}}</figcaption>
									</a>
								</figure>
					</div>
				{{end}}
				{{range .Assistants}}
					<div class="col-12 col-sm-6 col-md-4 col-lg-3">
						<h3>{{.Position.Name}}<a href="mailto:head-of-computing@ury.org.uk"><span class="glyphicon glyphicon-envelope"></span></a></h3>
								<figure>
									<a href="/people/{{.User.MemberID}}" title="Goto {{.User.Fname}} {{.User.Sname}}'s profile">
										<div class="user-img">
											<img class="img-fluid" src="https://ury.org.uk{{.User.Photo}}" alt="Photo of {{.User.Fname}} {{.User.Sname}}">
										</div>
										<figcaption>{{.User.Fname}} {{.User.Sname}}</figcaption>
									</a>
								</figure>
					</div>
				{{end}}
				</div>
			</div>
		</div>
